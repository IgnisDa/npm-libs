{
    "extends": [
        "plugin:@nrwl/nx/react-typescript",
        "@remix-run/eslint-config",
        "@remix-run/eslint-config/node",
        "../../.eslintrc.json"
    ],
    "ignorePatterns": [
        "!**/*",
        "**/public/build/**",
        "**/build/**"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ],
    "env": {
        "jest": true
    }
}
